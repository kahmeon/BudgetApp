<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:contentDescription="App Logo"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MyBudget App"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Card Views for Content Sections -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/app_purpose_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📌 Purpose"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/app_purpose_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MyBudget helps you manage finances by tracking income, expenses, budgets, and savings. Get intuitive spending control and achieve financial goals."
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/features_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔹 Key Features"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Track income and expenses in real-time"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Set monthly budgets and savings goals"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Generate financial reports and insights"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Secure cloud-based data storage"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• User-friendly interface"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/how_it_works_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📖 How It Works"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Sign up and log in to your account"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Add your income and expenses"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Set monthly budgets and goals"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. View reports and analyze spending"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5. Optimize your finances with insights"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/future_updates_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚀 Coming Soon"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• AI-powered spending suggestions"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Bank account integration"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Dark mode support"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Custom transaction categories"
                        android:textSize="15sp"
                        android:paddingVertical="4dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Developer Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/developer_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👨‍💻 Developed by Pow Kah Meon"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/developer_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📧 kahmeon@example.com"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:autoLink="email"
                    android:layout_marginBottom="16dp" />

                <!-- Social Media Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/btn_github"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_github"
                        android:contentDescription="GitHub"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/colorPrimary" />

                    <ImageButton
                        android:id="@+id/btn_play_store"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_play_store"
                        android:contentDescription="Play Store"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/colorPrimary" />

                    <ImageButton
                        android:id="@+id/btn_email"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_email"
                        android:contentDescription="Email"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/colorPrimary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2023 MyBudget App"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>